top_builddir	= ..
CC			= @CC@ -Wall
SHELL		= @SHELL@
LIBTOOL		= @LIBTOOL@
CFLAGS		= @CFLAGS@
LDFLAGS		= @LIBS@ @LDFLAGS@
LIBS		= @LIBS@
IDNSRC		:= $(wildcard *.c)
OBJECT		= $(IDNSRC:.c=.lo)
CPPFLAGS	= -I. -I.. @CPPFLAGS@
DEFS		= @DEFS@ $(CPPFLAGS)

COMPILE		= $(LIBTOOL) --mode=compile $(CC) $(DEFS) $(CFLAGS) -prefer-pic
RM			= @RM@ -f

all: idn_prep $(OBJECT)

idn_prep:
	if test ! -f config.h; then \
		ln -sf ../olibc-config.h config.h; \
	fi

%.lo: %.c stringprep.h punycode.h idna.h gunidecomp.h gunicomp.h
	$(COMPILE) -o $@ -c $<

clean:
	-$(RM) *.o *.lo *~ .libs/*
