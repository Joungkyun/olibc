AC_SUBST(OLIBC_LDFALGS)
AC_SUBST(OLIBC_CPPFLAGS)
AC_SUBST(OC_LDFALGS)
AC_SUBST(OC_CPPFLAGS)
AC_SUBST(OGC_LDFALGS)
AC_SUBST(OGC_CPPFLAGS)

AC_DEFUN([AX_OLIBC@COMPAT_VERSION@],
[
	AC_ARG_WITH(olibc,
		[  --with-olibc=PATH       path of olibc-config [[default: @static_bindir@/olibc@COMPAT_VERSION@-config]]])

	if test "x$with_olibc" != "xno"; then
		if test "x$with_olibc" != "x"; then
			if test "x$with_olibc" = "xyes"; then
				olibcconfig="@static_bindir@/olibc@COMPAT_VERSION@-config"
			else
				olibcconfig="$with_olibc"
			fi
		else
			olibcconfig="@static_bindir@/olibc@COMPAT_VERSION@-config"
		fi

		AC_MSG_CHECKING(for olibc@COMPAT_VERSION@-config path)
		if test ! -f "$olibcconfig" || test ! -x "$olibcconfig"; then
			AC_MSG_ERROR(can't find $olibcconfig)
		else
			AC_MSG_RESULT([$olibcconfig])
		fi

		OLIBC_LDFLAGS="`$olibcconfig --ldflags`"

		ret_ldflags=0
		for check_ldflags in $LDFLAGS
		do
			test -z "$OLIBC_LDFLAGS" && break
	
			if test "$check_ldflags" = "$OLIBC_LDFLAGS"; then
				ret_ldflags=1
				break
			fi
		done

		test $ret_ldflags -eq 0 && LDFLAGS="$LDFLAGS $OLIBC_LDFLAGS"
		AC_CHECK_LIB(olibc, join,,)

		OLIBC_INCLUDES="`$olibcconfig --includes`"

		ret_cppflags=0
		for check_cppflags in $CPPFLAGS
		do
			test -z "$OLIBC_INCLUDES" && break

			if test "$check_cppflags" = "$OLIBC_INCLUDES"; then
				ret_cppflags=1
				break
			fi
		done
		test $ret_cppflags -eq 0 && CPPFLAGS="$CPPFLAGS $OLIBC_INCLUDES"
		AC_CHECK_HEADERS(oc_type.h)
	fi
])

