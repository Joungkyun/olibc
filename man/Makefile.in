# $Id$
top_builddir	= ..
CC			= @CC@
CFLAGS		=
DESTDIR		=
SHELL		= @SHELL@

PROG		= @PACKAGE_NAME@
VERSION		= @PACKAGE_VERSION@

LIBTOOL		= @LIBTOOL@
INSTALL		= @INSTALL@
LS			= @LS@
GZIP		= @GZIP@
MKDIR		= @MKDIR@ -p

prefix		= @prefix@
exec_prefix	= @exec_prefix@
mandir		= @mandir@

D_LIBTOOL	= $(LIBTOOL) --mode=install @INSTALL_DATA@
SUBMAN		= ko

install:
	$(MKDIR) $(DESTDIR)$(mandir)/{man3,ko/man3}
	for i in `$(LS) *.3`; do \
		if test "$$i" = "convert_racecode.3"; then \
			continue; \
		fi; \
		$(D_LIBTOOL) $$i $(DESTDIR)$(mandir)/man3/ ;\
	done

	for i in $(SUBMAN); do \
		$(MKDIR) $(DESTDIR)$(mandir)/$$i/man3; \
		for j in `$(LS) $$i/*.3`; do \
			if test "$$j" = "convert_racecode.3"; then \
				continue; \
			fi; \
			$(D_LIBTOOL) $$j $(DESTDIR)$(mandir)/$$i/man3/ ;\
		done; \
	done
