top_builddir	= ..
CC			= @CC@ -Wall
LIBTOOL		= @LIBTOOL@
CFLAGS		= @CFLAGS@
CPPFLAGS	= -I. -I.. @CPPFLAGS@
LDFLAGS		:= -L$(top_builddir)/.libs -lolibc @LDFLAGS@ @LIBS@
SRC			:= $(wildcard *.c)
COMMANDS	:= $(SRC:.c=)
RM			= @RM@ -f

all: $(COMMANDS)

%: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -o $@ $< $(LDFLAGS)

confirm: $(COMMANDS)
	@if test -f "./test.ln"; then \
		rm -f test.ln; \
	fi
	@ln -sf test.txt test.ln; \
	for i in $(COMMANDS); do \
		LD_LIBRARY_PATH=$(top_builddir)/.libs ./$$i; \
	done;
	@if test -f "./test.ln"; then \
		rm -f test.ln; \
	fi

clean:
	-$(RM) $(COMMANDS)
